
# Flask Environment
FLASK_ENV=development
FLASK_APP=run_modernized.py
SECRET_KEY=your-secret-key-here

# Database
DATABASE_URL=sqlite:///baimuras_furniture.db
# For PostgreSQL: postgresql://username:password@localhost/baimuras_furniture

# Redis for Celery and Cache
REDIS_URL=redis://localhost:6379/0

# Email Configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=info@baimuras.space
MAIL_PASSWORD=your-email-password
MAIL_DEFAULT_SENDER=BaiMuras <info@baimuras.space>

# File Upload
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216

# Security
BCRYPT_LOG_ROUNDS=12
WTF_CSRF_TIME_LIMIT=3600

# Rate Limiting
RATELIMIT_STORAGE_URL=redis://localhost:6379/1
RATELIMIT_DEFAULT=1000 per hour

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/baimuras.log

# Backup
BACKUP_DIR=/tmp/backups

# Company Information
COMPANY_NAME=BaiMuras
COMPANY_PHONE=+996509912569
COMPANY_EMAIL=info@baimuras.space
COMPANY_ADDRESS=г. Бишкек, ул. Фрунзе 123

# External Services (optional)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
ANALYTICS_ID=your-analytics-id
