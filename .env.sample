
# Скопируйте этот файл в .env и заполните своими значениями

# Секретный ключ для Flask (ОБЯЗАТЕЛЬНО для продакшена)
SECRET_KEY=your-super-secret-key-here

# База данных
DATABASE_URL=sqlite:///baimuras.db

# API ключ для интеграции с n8n
API_KEY=your-api-key-for-n8n-integration

# Настройки почты (опционально)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Окружение
FLASK_ENV=development
